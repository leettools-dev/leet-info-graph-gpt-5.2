# Backend environment variables (INFOGRAPH_*)

# SECURITY
# Generate a strong random secret for cookie/session signing.
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
INFOGRAPH_SECRET_KEY=

# DATABASE
INFOGRAPH_DATABASE_URL=sqlite+aiosqlite:///./infograph.db

# FRONTEND
INFOGRAPH_FRONTEND_ORIGIN=http://localhost:5173

# COOKIE SETTINGS
# Set to true when serving over HTTPS
INFOGRAPH_COOKIE_SECURE=false

# GOOGLE OAUTH
INFOGRAPH_GOOGLE_CLIENT_ID=
INFOGRAPH_GOOGLE_CLIENT_SECRET=
INFOGRAPH_GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# SEARCH LIMITS
INFOGRAPH_SEARCH_RATE_PER_MINUTE=20
INFOGRAPH_SEARCH_CACHE_TTL_SECONDS=3600
INFOGRAPH_SEARCH_CACHE_MAX_ITEMS=512
